function titleCase(str) {
  str = str.split(" ");
  var imax= str.length;
  console.log(imax);
  for (var i=0; i < imax; i++) {
    var subStr=str[i];
    var subStr= subStr.replace(subStr.charAt(0),subStr.charAt(0).toUpperCase());

    console.log(subStr);
//    console.log(subStr);
  }
       console.log(str);

  
 
  return str;
}

titleCase("I'm a little tea pot");

